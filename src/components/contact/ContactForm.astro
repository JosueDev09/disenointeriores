@media (max-width: 1024px) {
  .contact-grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .contact-form-wrapper {
    padding: 40px;
  }
}

@media (max-width: 768px) {
  .contact-section {
    padding: 80px 0;
  }
  
  .contact-header {
