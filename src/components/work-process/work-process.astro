---
// Work Process Section for Interior Design
---

<section id="work-process" class="py-20 lg:py-32 bg-gradient-to-br from-[#F5F1EB] via-[#FAF9F6] to-[#F8F8F8] relative overflow-hidden">
  <!-- Background Decoration -->
  <div class="absolute top-0 left-0 w-full h-full opacity-30">
    <div class="absolute top-20 left-10 w-32 h-32 rounded-full bg-gradient-to-br from-[#9CAF88]/20 to-[#D4A574]/20"></div>
    <div class="absolute bottom-32 right-16 w-24 h-24 rounded-full bg-gradient-to-br from-[#E8B4A0]/20 to-[#9CAF88]/20"></div>
    <div class="absolute top-1/2 left-1/4 w-16 h-16 rounded-full bg-gradient-to-br from-[#D4A574]/15 to-[#E8B4A0]/15"></div>
  </div>

  <div class="container mx-auto px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 lg:mb-24">
      <h2 class="section-title text-4xl lg:text-5xl font-bold mb-6">
        <span class="gradient-text">Nuestro Proceso</span><br>
        <span class="text-[#2F2F2F]">de Trabajo</span>
      </h2>
      <p class="text-lg lg:text-xl text-[#2F2F2F]/80 max-w-3xl mx-auto leading-relaxed">
        Un enfoque estructurado y colaborativo que garantiza resultados excepcionales en cada proyecto
      </p>
    </div>

    <!-- Process Steps -->
    <div class="relative">
      <!-- Connection Line -->
      <div class="hidden lg:block absolute top-1/2 left-0 right-0 h-1 bg-gradient-to-r from-[#9CAF88] via-[#D4A574] to-[#E8B4A0] transform -translate-y-1/2 z-0"></div>
      
      <!-- Steps Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-4 relative z-10">
        
        <!-- Step 1: Consulta Inicial -->
        <div class="process-step group" data-step="1">
          <div class="step-card">
            <div class="step-number">
              <span>01</span>
            </div>
            
            <div class="step-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M17 21V19C17 17.9391 16.5786 16.9217 15.8284 16.1716C15.0783 15.4214 14.0609 15 13 15H5C3.93913 15 2.92172 15.4214 2.17157 16.1716C1.42143 16.9217 1 17.9391 1 19V21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M23 21V19C23 18.1645 22.7155 17.3541 22.2094 16.7045C21.7033 16.055 20.9999 15.6059 20.2188 15.436" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M16 3.436C16.7812 3.60899 17.4846 4.05806 17.9907 4.70762C18.4968 5.35719 18.7813 6.16759 18.7813 7.003C18.7813 7.83841 18.4968 8.64881 17.9907 9.29837C17.4846 9.94794 16.7812 10.397 16 10.57" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            
            <div class="step-content">
              <h3 class="step-title">Consulta Inicial</h3>
              <p class="step-description">
                Conversamos sobre tus necesidades, estilo de vida, presupuesto y visión para crear la base del proyecto.
              </p>
              
              <div class="step-features">
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Análisis de necesidades</span>
                </div>
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Definición de presupuesto</span>
                </div>
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Cronograma inicial</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 2: Diseño Conceptual -->
        <div class="process-step group" data-step="2">
          <div class="step-card">
            <div class="step-number">
              <span>02</span>
            </div>
            
            <div class="step-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 19L19 12L22 15L15 22L12 19Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M18 13L16.5 5.5L2 2L5.5 16.5L13 18L18 13Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M2 2L9.586 9.586" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <circle cx="11" cy="11" r="2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            
            <div class="step-content">
              <h3 class="step-title">Diseño Conceptual</h3>
              <p class="step-description">
                Desarrollamos conceptos creativos, moodboards y propuestas iniciales que capturen tu visión única.
              </p>
              
              <div class="step-features">
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Moodboards y paletas</span>
                </div>
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Planos conceptuales</span>
                </div>
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Renderizados 3D</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 3: Desarrollo y Selección -->
        <div class="process-step group" data-step="3">
          <div class="step-card">
            <div class="step-number">
              <span>03</span>
            </div>
            
            <div class="step-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 11H15M9 15H15M17 21H7C6.46957 21 5.96086 20.7893 5.58579 20.4142C5.21071 20.0391 5 19.5304 5 19V5C5 4.46957 5.21071 3.96086 5.58579 3.58579C5.96086 3.21071 6.46957 3 7 3H12.586C12.8512 3.00006 13.1055 3.10545 13.2929 3.29289L18.7071 8.70711C18.8946 8.89455 18.9999 9.14881 19 9.414V19C19 19.5304 18.7893 20.0391 18.4142 20.4142C18.0391 20.7893 17.5304 21 17 21Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M13 3V9H19" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            
            <div class="step-content">
              <h3 class="step-title">Desarrollo y Selección</h3>
              <p class="step-description">
                Refinamos los diseños, seleccionamos materiales, mobiliario y todos los elementos que darán vida al proyecto.
              </p>
              
              <div class="step-features">
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Selección de materiales</span>
                </div>
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Especificaciones técnicas</span>
                </div>
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Cotizaciones detalladas</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Step 4: Implementación -->
        <div class="process-step group" data-step="4">
          <div class="step-card">
            <div class="step-number">
              <span>04</span>
            </div>
            
            <div class="step-icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 9L12 2L21 9V20C21 20.5304 20.7893 21.0391 20.4142 21.4142C20.0391 21.7893 19.5304 22 19 22H5C4.46957 22 3.96086 21.7893 3.58579 21.4142C3.21071 21.0391 3 20.5304 3 20V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M9 22V12H15V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
            
            <div class="step-content">
              <h3 class="step-title">Implementación</h3>
              <p class="step-description">
                Coordinamos y supervisamos la ejecución completa, asegurando que cada detalle cumpla con nuestros estándares de calidad.
              </p>
              
              <div class="step-features">
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Gestión de proveedores</span>
                </div>
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Supervisión de obra</span>
                </div>
                <div class="feature-item">
                  <div class="feature-dot"></div>
                  <span>Entrega final</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Timeline Info -->
    <div class="mt-16 lg:mt-20 text-center">
      <div class="inline-flex items-center px-6 py-3 rounded-full bg-gradient-to-r from-[rgba(156,175,136,0.1)] to-[rgba(232,180,160,0.1)] border border-[rgba(156,175,136,0.2)]">
        <svg class="w-5 h-5 text-[#9CAF88] mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-[#2F2F2F] font-medium">Tiempo promedio del proceso completo: 6-12 semanas</span>
      </div>
    </div>

    <!-- CTA Section -->
    <div class="text-center mt-12">
      <a href="/contact" class="cta-button inline-flex items-center px-8 py-4 rounded-full text-lg font-semibold transition-all duration-500 transform hover:scale-105">
        Iniciar mi Consulta Gratuita
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
/* Section Styles */
.section-title {
  opacity: 0;
  transform: translateY(30px);
  animation: fadeInUp 1s ease 0.2s forwards;
}

.gradient-text {
  background: linear-gradient(135deg, #9CAF88 0%, #D4A574 50%, #E8B4A0 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Process Steps */
.process-step {
  opacity: 0;
  transform: translateY(40px);
  animation: fadeInUp 1s ease forwards;
}

.process-step:nth-child(1) { animation-delay: 0.4s; }
.process-step:nth-child(2) { animation-delay: 0.6s; }
.process-step:nth-child(3) { animation-delay: 0.8s; }
.process-step:nth-child(4) { animation-delay: 1s; }

.step-card {
  background: rgba(250, 249, 246, 0.9);
  backdrop-filter: blur(20px);
  border: 2px solid rgba(156, 175, 136, 0.15);
  border-radius: 2rem;
  padding: 2rem;
  height: 100%;
  position: relative;
  transition: all 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
  overflow: hidden;
}

.step-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #9CAF88 0%, #D4A574 50%, #E8B4A0 100%);
  transform: scaleX(0);
  transition: transform 0.6s ease;
}

.group:hover .step-card {
  transform: translateY(-12px) scale(1.02);
  box-shadow: 0 25px 50px rgba(156, 175, 136, 0.2);
  border-color: rgba(212, 165, 116, 0.3);
}

.group:hover .step-card::before {
  transform: scaleX(1);
}

/* Step Number */
.step-number {
  position: absolute;
  top: -15px;
  right: 2rem;
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #9CAF88 0%, #D4A574 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.25rem;
  font-weight: bold;
  color: #FAF9F6;
  box-shadow: 0 8px 20px rgba(156, 175, 136, 0.3);
  transition: all 0.3s ease;
}

.group:hover .step-number {
  background: linear-gradient(135deg, #D4A574 0%, #E8B4A0 100%);
  transform: scale(1.1) rotate(10deg);
}

/* Step Icon */
.step-icon {
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, rgba(156, 175, 136, 0.1) 0%, rgba(212, 165, 116, 0.1) 100%);
  border-radius: 1.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1.5rem;
  color: #9CAF88;
  transition: all 0.4s ease;
}

.group:hover .step-icon {
  background: linear-gradient(135deg, rgba(156, 175, 136, 0.2) 0%, rgba(212, 165, 116, 0.2) 100%);
  color: #D4A574;
  transform: scale(1.1) rotate(-5deg);
}

/* Step Content */
.step-title {
  font-size: 1.5rem;
  font-weight: bold;
  color: #2F2F2F;
  margin-bottom: 1rem;
  transition: color 0.3s ease;
}

.group:hover .step-title {
  color: #9CAF88;
}

.step-description {
  color: rgba(47, 47, 47, 0.8);
  line-height: 1.6;
  margin-bottom: 1.5rem;
}

/* Step Features */
.step-features {
  space-y: 0.75rem;
}

.feature-item {
  display: flex;
  align-items: center;
  font-size: 0.9rem;
  color: rgba(47, 47, 47, 0.7);
  transition: color 0.3s ease;
}

.group:hover .feature-item {
  color: rgba(47, 47, 47, 0.9);
}

.feature-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: linear-gradient(135deg, #9CAF88 0%, #D4A574 100%);
  margin-right: 0.75rem;
  flex-shrink: 0;
}

/* CTA Button */
.cta-button {
  background: linear-gradient(135deg, #9CAF88 0%, #D4A574 100%);
  color: #FAF9F6;
  box-shadow: 0 8px 25px rgba(156, 175, 136, 0.4);
}

.cta-button:hover {
  background: linear-gradient(135deg, #D4A574 0%, #E8B4A0 100%);
  box-shadow: 0 12px 35px rgba(212, 165, 116, 0.5);
  transform: scale(1.05) translateY(-2px);
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive Design */
@media (max-width: 1024px) {
  .step-card {
    padding: 1.5rem;
  }
  
  .step-number {
    width: 50px;
    height: 50px;
    font-size: 1rem;
  }
  
  .step-icon {
    width: 60px;
    height: 60px;
  }
}

@media (max-width: 768px) {
  .section-title {
    font-size: 2.5rem;
  }
  
  .step-card {
    padding: 1.25rem;
  }
  
  .step-title {
    font-size: 1.25rem;
  }
  
  .step-number {
    top: -10px;
    right: 1rem;
    width: 40px;
    height: 40px;
    font-size: 0.9rem;
  }
}

@media (max-width: 640px) {
  .process-step {
    margin-bottom: 2rem;
  }
}
</style>

<script>
// Intersection Observer for animations
const observerOptions = {
  threshold: 0.1,
  rootMargin: '0px 0px -50px 0px'
};

const observer = new IntersectionObserver((entries) => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      const element = entry.target as HTMLElement;
      element.style.animationPlayState = 'running';
    }
  });
}, observerOptions);

// Enhanced hover effects for steps
function addStepInteractions() {
  const steps = document.querySelectorAll('.process-step');
  
  steps.forEach((step, index) => {
    const stepElement = step as HTMLElement;
    
    stepElement.addEventListener('mouseenter', () => {
      // Add subtle pulse effect to other steps
      steps.forEach((otherStep, otherIndex) => {
        if (index !== otherIndex) {
          const otherElement = otherStep as HTMLElement;
          otherElement.style.opacity = '0.7';
        }
      });
    });
    
    stepElement.addEventListener('mouseleave', () => {
      // Reset opacity for all steps
      steps.forEach(otherStep => {
        const otherElement = otherStep as HTMLElement;
        otherElement.style.opacity = '1';
      });
    });
  });
}

// Initialize when DOM is loaded
document.addEventListener('DOMContentLoaded', () => {
  // Setup intersection observer
  const animatedElements = document.querySelectorAll('.section-title, .process-step');
  animatedElements.forEach(el => {
    const element = el as HTMLElement;
    element.style.animationPlayState = 'paused';
    observer.observe(el);
  });
  
  // Add step interactions
  addStepInteractions();
  
  // Add smooth scroll for CTA
  const ctaButton = document.querySelector('.cta-button');
  ctaButton?.addEventListener('click', (e) => {
    const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
    if (href === '/contact') {
      // If you want to scroll to a contact section instead of navigating
      const contactSection = document.getElementById('contact');
      if (contactSection) {
        e.preventDefault();
        contactSection.scrollIntoView({ behavior: 'smooth' });
      }
    }
  });
});
</script>