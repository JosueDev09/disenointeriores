---
import '../styles/global.css';
import Menu from '../components/menu/menu';
import Footer from '../components/footer/Footer.astro';
const { 
  title = "Josué Dev - Diseno-Interiores",
  description = "Desarrollador Full Stack especializado en React, Node.js, Astro y tecnologías modernas. Creando experiencias digitales excepcionales.",
  showMenu = true,
  showFooter = true
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<link rel="icon" type="image/svg+xml" href="/cruz-negativa.svg" />
		<link rel="icon" type="image/png" href="/cruz-negativa.svg" />
		<link rel="apple-touch-icon" href="/cruz-negativa.svg" />

		<!-- SEO Meta Tags -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="author" content="Josué Dev" />
		<meta name="keywords" content="desarrollador, full stack, react, node.js, astro, javascript, typescript, portafolio" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
	
		<meta name="generator" content={Astro.generator} />
		
	</head>
	
	<body>
		<div class="page-wrapper">
			{showMenu && (
				<header class="menu-fijo">
					<Menu client:load />
				</header>
			)}	
			<main class="main-content">
				<slot />
			</main>
			{showFooter && <Footer />}
		</div>
	</body>
</html>

<style is:global>
/* Layout Structure */
.page-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.main-content {
  flex: 1;
}

/* Ensure body takes full height */
html, body {
  height: 100%;
  margin: 0;
  padding: 0;
}
</style>

